<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="223dp"
            android:scaleType="centerCrop" />




        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="-20dp"
            android:background="@drawable/overlay"

            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewRoleDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_family"
                android:text="Data Analyst"
                android:textSize="24dp"

                android:textStyle="bold" />

                <Button
                    android:id="@+id/openMenuButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignTop="@id/imageView"
                    android:layout_alignParentEnd="true"

                    android:layout_marginEnd="12dp"
                    android:background="@drawable/threedots_icon"

                    android:onClick="openOptionsMenu"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textViewTitleDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="TextView"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/t1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView 1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:drawableStart="@drawable/cash_icon"
                android:textSize="16sp"
                android:background="@drawable/detail_tag_outline"
                android:fontFamily="@font/font_family"/>



            <TextView
                android:id="@+id/t2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView 2"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:drawableStart="@drawable/time_icon"
                android:background="@drawable/detail_tag_outline"
                android:fontFamily="@font/font_family"/>


            <TextView
                android:id="@+id/t3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView 3"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:drawableStart="@drawable/location_icon"
                android:background="@drawable/detail_tag_outline"
                android:textSize="16sp"
                android:fontFamily="@font/font_family"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="16dp">



            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="#888888"
                android:textSize="14sp"
                android:fontFamily="@font/font_family"/>

            <TextView
                android:id="@+id/textViewDescriptionDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/font_family"/>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Requirements"
                android:textSize="20dp"

                android:textStyle="bold"
                android:fontFamily="@font/font_family"/>

            <TextView
                android:id="@+id/requirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:fontFamily="@font/font_family"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eligibility"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/font_family"
                />

            <TextView
                android:id="@+id/markReq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:fontFamily="@font/font_family"
                android:layout_marginTop="10dp"
                android:textSize="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/applicantsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/requirements"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/font_family"
                android:text="Applicants:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TableLayout
                android:id="@+id/applicantsTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/requirements"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/font_family"
                android:stretchColumns="1">

                <!-- Table Header Row -->
                <TableRow>

                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/font_family"
                        android:text="No."
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="88dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/font_family"
                        android:text="Name"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="209dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_family"
                        android:text="Email"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>
        </LinearLayout>



    </LinearLayout>


</ScrollView>
